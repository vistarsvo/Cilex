{
    "name"        : "cilex/cilex",
    "description" : "The PHP micro-framework for Command line tools based on the Symfony2 Components",
    "keywords"    : ["microframework","cli"],
    "homepage"    : "http://cilex.github.com",
    "license"     : "MIT",

    "autoload" : {
        "psr-4" : { "Cilex\\": "src/Cilex" }
    },

    "authors":[
        { "name":  "Mike van Riel", "email": "me@mikevanriel.com" }
    ],

    "require" : {
        "php"                      : ">=7.1",
        "pimple/pimple"            : "^3.2.3",
        "silex/api"                : "^2.3",
        "symfony/process"          : "^4.0",
        "symfony/console"          : "^4.0",
        "symfony/event-dispatcher" : "^4.0"
    },

    "require-dev" : {
        "phpunit/phpunit" : "~3.7"
    },

    "suggest" : {
        "symfony/yaml"      : "^4.0",
        "symfony/validator" : "^4.0"
    },

    "extra" : {
        "branch-alias" : {
            "dev-develop": "2.x-dev"
        }
   }
}
